{
  "name": "medflow",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "node build-electron.js && vite && electron .",
    "build": "node build-electron.js && vite build && electron-builder",
    "build:web": "vite build",
    "build:electron": "node build-electron.js",
    "preview": "vite preview",
    "electron": "node build-electron.js && electron ."
  },
  "dependencies": {
    "react": "^19.2.3",
    "@google/genai": "^1.34.0",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "lucide-react": "^0.562.0",
    "recharts": "^3.6.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "electron": "^31.0.0",
    "electron-builder": "^25.1.0",
    "esbuild": "^0.20.0",
    "electron-is-dev": "^3.0.0"
  },
  "build": {
    "appId": "com.medflow.app",
    "productName": "Medflow",
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
